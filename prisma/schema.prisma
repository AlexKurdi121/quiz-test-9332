datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Quiz {
  id          Int        @id @default(autoincrement())
  code        String     @unique          // added code field for join
  title       String
  started     Boolean    @default(false)
  createdAt   DateTime   @default(now())
  questions   Question[]
  participants Participant[]
}

model Question {
  id       Int      @id @default(autoincrement())
  text     String
  options  String[]
  answer   Int
  quiz     Quiz     @relation(fields: [quizId], references: [id])
  quizId   Int
}

model Participant {
  id         Int      @id @default(autoincrement())
  name       String
  answers    Int[]
  score      Int      @default(0)
  quizId     Int
  quiz       Quiz     @relation(fields: [quizId], references: [id])
}
